<%= form_with(model: measurement, local: true) do |form| %>
<% if measurement.errors.any? %>
<div class="container row" id="error_explanation">
  <div class="col s12 m7 offset-m2 center-align">
    <ul class="">
      <li class="red-text center-align">*Por favor no deje ning√∫n campo vacio.</li>
    </ul>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col s12 m4">
    <div class="field form">
      <div class="input-field">
        <%= form.label :cedula, "Cedula: ", class:"black-text label" %>
        <%= form.text_field :cedula, id: :cedula , required:true%>
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="field form">
      <div class="input-field">
        <%= form.label :residence, "Lugar de Residencia: ", class:"black-text label" %>
        <%= form.text_field :residence, id: :residence , required:true%>
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="field form">
      <div class="input-field">
        <%= form.label :birthdate, "Lugar de Nacimiento: ", class:"black-text label" %>
        <%= form.text_field :birthdate, id: :birthdate , required:true%>
      </div>
    </div>
  </div>

</div>
<div class="row">
<div class="col s12 m3">
  <div class="field form">
    <div class="input-field">
      <%= form.label :age, "Edad: ", class:"black-text label" %>
      <%= form.text_field :age, id: :age , required:true%>
    </div>
    
  </div>
</div>
<div class="col s12 m3">
    <div class="field form">
      <div class="input-field">
        <%= form.label :bust, "Busto: ", class:"black-text label center-align" %> <span id="value"></span>
        <%= form.text_field :bust, id: :measurement_bust, required:true%>
      </div>
    </div>
  </div>
  <div class="col s12 m3">
    <div class="field form">
      <div class="input-field">
        <%= form.label :waist, "Cintura: ", class:"black-text label" %>
        <%= form.text_field :waist, id: :measurement_waist , required:true%>
      </div>
    </div>
  </div>

  <div class="col s12 m3">
    <div class="field form">
      <div class="input-field">
        <%= form.label :hip, "Cadera: ", class:"black-text label" %>
        <%= form.text_field :hip, id: :measurement_hip , required:true%>
      </div>
    </div>
  </div>

</div>







<div class="row">
  <div class="col s12 m6 offset-m3">
    <div class="actions">
      <%= form.submit "Analizar", class:"btn btn-large width-100" %>
    </div>
  </div>
</div>
<% end %>
